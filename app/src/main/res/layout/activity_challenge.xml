<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.a17644090.awesomemathgame.ChallengeActivity">

    <TextView
        android:id="@+id/textSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="109dp"
        android:gravity="center"
        android:text="CHALLENGE TASK !"
        android:textColor="@android:color/holo_red_dark"
        android:textCursorDrawable="@android:drawable/alert_dark_frame"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btnEasy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnHard"
        android:layout_alignBottom="@+id/btnHard"
        android:layout_marginEnd="90dp"
        android:layout_toStartOf="@+id/btnMedium"
        android:text="EASY"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/btnMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnHard"
        android:layout_alignBottom="@+id/btnHard"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="210dp"
        android:text="Medium"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/btnHard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textSetting"
        android:layout_marginTop="148dp"
        android:layout_toStartOf="@+id/btnMedium"
        android:text="hard"
        android:textColor="@color/colorAccent" />
</RelativeLayout>
